<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/offline_coordinator_layout"
    tools:context="equity.com.fourgr.OfflineDataActivity">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all_offline_submissions">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empty"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat ="@drawable/ic_empty_white_box"
            android:layout_gravity="center"
            android:tint="#BDBDBD"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BDBDBD"
            android:textAlignment="center"
            android:textSize="24dp"
            android:inputType="textCapCharacters"
            android:text="It's all empty in here"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
